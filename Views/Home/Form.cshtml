@{
}

@model Mission_12.Models.Appointment
<div class="container">
    <form method="post">

        <div asp-validation-summary="All"></div>

        <input type="date" value="@ViewBag.Date" disabled />
        <br />
        <input type="time" value="@ViewBag.Time" disabled />
        <br />
        <input type="hidden" value="@ViewBag.Id" asp-for="TimeSlot"/>

        <label asp-for="GroupName">Name of Group:</label>
        <input asp-for="GroupName" /><br />

        <label asp-for="GroupSize">Size of Group:</label>
        <input asp-for="GroupSize" type="number" /><br />

        <label asp-for="EmailAddress">Email Address:</label>
        <input asp-for="EmailAddress" /><br />

        <label asp-for="PhoneNumber">Phone Number:</label>
        <input asp-for="PhoneNumber" /><br />


        <button asp-action="Form" asp-route-time="@ViewBag.Time" asp-route-date="@ViewBag.Date" as type="submit">Book</button>
    </form>
</div>